FROM golang:1.23.6-alpine

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application (outside /app to avoid volume conflicts)
RUN go build -o /usr/local/bin/app cmd/app/main.go

EXPOSE ${APP_PORT:-8000}

CMD ["/usr/local/bin/app"]
